<?xml version="1.0"?>
<object
    name="portal_controlpanel"
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    i18n:domain="mingtak.ECBase">

    <configlet
        title="Custom Related Setting"
        action_id="mingtak.ECBase.custom"
        appId="mingtak.ECBase"
        category="Products"
        condition_expr=""
        url_expr="string:${portal_url}/@@customControlPanel"
        icon_expr="string:/favicon.ico"
        visible="True"
        i18n:attributes="title">
            <permission>Manage portal</permission>
    </configlet>

</object>
